<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, maxlength: 100, placeholder: "Case-sensitive" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), maxlength: 100, placeholder: "Case-sensitive" %>
    <%= f.input :password_confirmation, required: true, maxlength: 100 %>
    <%= f.input :screening, required: true, label: "Why do you want to join the Extinguish community?", maxlength: 500, hint:("500 character limit")  %>

    <%= f.label :terms_of_service do %>
      <%= f.check_box :terms_of_service %>
        I have read and agree to the <%= link_to 'Terms of Use', "/terms", target: :_blank %>
    <% end %>
    <%= f.label :minimum_age do %>
      <%= f.check_box :minimum_age %>
        I am at least 13 years old
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", data: { confirm: "Extinguish is NOT a replacement for professional help and all of the advice found here is from our own community of users like you. Any opinions, advice, statements or other information contained in any comments posted by any third party are the opinions of the author of that comment and not of Extinguish. The fact that a particular comment is posted on our forum does not mean that Extinguish has endorsed that comment in any way or verified the accuracy, completeness or usefulness of any comment. Information found on Extinguish is for informational purposes only and you should rely on any advice found here at your own risk. "} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
