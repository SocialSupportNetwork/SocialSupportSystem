<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<header role="banner" class="app-header" onload="function()">
  <div class="top-navbar">
      <div id="desktopMenu"> 
        <a class="app-nav-logo" href="/"><%= t 'Home' %></a>
        <!--<a link_to 'About', "/info"</a>-->
      </div>
      <div class="app-nav-auth">
        <% if current_user %>
          <%= link_to t('nav.sign_out'), main_app.destroy_user_session_path,
                      method: :delete %>
          <li class="thredded--user-navigation--standalone--profile thredded--user-navigation--item">
            <%= link_to current_user.thredded_display_name, user_path(current_user) %>
          </li>
        <% else %>
          <%= link_to t('nav.sign_in'), main_app.new_user_session_path %>
        <% end %>
    </div>
  </div>
  
  <div class="bottom-navbar">
    <div class="left-menu">
      <div class="left-menu-content">
        <%= link_to "About Us", "/info" %> •
        <%= link_to "Rick's Tips", "/tips" %>
      </div>
    </div>
    
    <div class="center-icon">
      <div class="center-icon-content">
        
        <%= link_to "/" do %>
              <div class="header-icon">
              <%= inline_svg "icon-logo.svg", class: 'icon' %>
              </div>
        <% end %>
      </div>
    </div>
    
    <div class="right-menu">
      <div class="right-menu-content">
        <%= link_to t('nav.forums'), thredded.root_path %> • 
        <%= link_to "Resources", "/about" %>
      </div>
    </div>
    
    <div class="mobile-menu">
      <div class="mobile-menu-content">
        <ul class="bottom-navbar">
          <li>
            <%= link_to "/info" do %>
              <i class="material-icons md-36">people</i><span class="caption">About Us</span>
            <% end %>
          </li>
          <li>
            <%= link_to "/tips" do %>
              <i class="material-icons md-36">whatshot</i><span class="caption">Rick's Tips</span>
            <% end %>
          </li>
          <li>
            <%= link_to "/" do %>
              <div class="header-icon">
              <%= inline_svg "icon-logo.svg", class: 'icon' %>Home
              </div>
            <% end %>
          </li>
          <li>
            <%= link_to thredded.root_path do %>
              <i class="material-icons md-36">forum</i><span class="caption">Forums</span>
            <% end %>
          </li>
          <li>
            <%= link_to "/about" do %>
              <i class="material-icons md-36">import_contacts</i><span class="caption">Resources</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    
  </div>
  
<%= javascript_include_tag "shortcut" %>
<script>
$(window).on("scroll", function () {
    if ($(this).scrollTop() > 100) {
        $('.app-header').addClass('shrink');
    }
    else {
        $('.app-header').removeClass('shrink');
    }
});

shortcut.add("ctrl+x", function() {
  var x = Math.random() * (3) + 1;
  var y =""
  if (x == 1) {
    y = "https://www.youtube.com";
  }
  else if (x == 2) {
    y ="https://weather.com/";
  }
  else {
    y = "https://www.buzzfeed.com";
  }
  window.location.replace(y);
});  
</script>

</header>
